# Invoy Invoice Application Environment Configuration
# Copy this file to .env and update with your database credentials

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Type: Choose 'postgres' (recommended) or 'mssql'
DB_TYPE=postgres

# =============================================================================
# POSTGRESQL CONFIGURATION (Primary - Recommended)
# =============================================================================

# PostgreSQL Connection String
# Format: postgresql://username:password@host:port/database
DB_CONNECTION_STRING=postgresql://postgres:yourpassword@localhost:5432/invoydb

# Optional PostgreSQL Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=15000
DB_REQUEST_TIMEOUT=15000

# =============================================================================
# MSSQL CONFIGURATION (Alternative)
# =============================================================================

# MSSQL Connection String Examples:
# Local SQL Server with Windows Authentication:
# DB_CONNECTION_STRING=Server=localhost;Database=InvoyDB;Trusted_Connection=true;Encrypt=false;TrustServerCertificate=true;

# Local SQL Server with SQL Authentication:
# DB_CONNECTION_STRING=Server=localhost,1433;Database=InvoyDB;User Id=sa;Password=YourPassword123!;Encrypt=false;TrustServerCertificate=true;

# Azure SQL Database:
# DB_CONNECTION_STRING=Server=your-server.database.windows.net;Database=invoydb;User Id=yourusername;Password=yourpassword;Encrypt=true;TrustServerCertificate=false;

# SQL Server LocalDB (for development):
# DB_CONNECTION_STRING=Server=(localdb)\\mssqllocaldb;Database=InvoyDB;Trusted_Connection=true;

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=8000
HOST=localhost

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Database Health Check
DB_HEALTH_CHECK_INTERVAL=30000

# Query Logging (set to true for development, false for production)
DB_ENABLE_QUERY_LOGGING=true
DB_LOG_SLOW_QUERIES=1000
